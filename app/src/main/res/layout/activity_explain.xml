<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        />

    <!-- TextGenres -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"

        android:layout_below="@id/img"
        android:layout_marginTop="4dip"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:foregroundGravity="center_horizontal"
        android:layout_below="@id/tvTitle"
        android:id="@+id/divider"
        android:background="@android:color/darker_gray"/>
    <!-- TextAlbums&Tracks -->
    <TextView
        android:id="@+id/tvDate"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="8dp"
        android:textSize="15sp"
        />


    <!--Title -->


    <!-- Biography -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/tvDate"
        android:id="@+id/svExplain"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvExplain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDate"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="8dp"
                android:textSize="17sp"
                android:textColorLink="#808080"
                />
            <TextView
                android:id="@+id/tvWhen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/svExplain"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="8dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="Когда летим:"/>
            <TextView
                android:id="@+id/tvWhenDates"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvWhen"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="8dp"
                android:textSize="17sp"
                />
        </LinearLayout>




    </ScrollView>

</RelativeLayout>